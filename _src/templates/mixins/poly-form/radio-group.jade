include form-input

mixin radio-group(options)
  - options       = options               || {}

  - className     = options.class         || 'col-md-12'
  - inputClass    = options.inputClass    || 'form-control'
  - radioClass    = options.radioClass    || 'radio-inline'
  - name          = options.name          || 'control'
  - label         = options.label         || 'Ετικέτα'
  - placeholder   = options.placeholder   || label
  - autocomplete  = options.autocomplete  || name
  - type          = options.type          || 'radio'
  - radioValues   = options.radioValues   || null
  - popover       = options.popover       || null

  - options.inputClass = 'form-input'

  .row
    div(class=className)
      if (radioValues)
        each val, index in radioValues
          - options.ngChecked = index==0?true:null
          div(class=radioClass)
            label
              - options.value = (typeof val == 'string' ? val: val.value)
              +form-input(options)
              = ' ' + (typeof val == 'string' ? val: val.label)
      else
        label
          .input-group
            +form-input(options)
            = ' ' + label