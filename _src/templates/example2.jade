include mixins/form-control
html(ng-app="PolyForm")
  head
    include partials/header
  body
    .container
      form(name="myform", ng-cloak="true")
        form-tabs
          form-tab(tab-title="Select2")
            .row
              .col-md-12
                +form-control({name:'popover',label:'popover',popover: 'Παρακαλώ συμπληρώστε το πεδίο'})
                +form-control({name:'select2Input',label:'select2Input',type:'select2-input'})
              .col-md-12
                +form-control({name:'select2',label:'select2',type:'select2',select2Data:['male', 'female'],allowClear:'true'})

    include partials/footer